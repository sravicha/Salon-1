<?xml version="1.0" encoding="UTF-8"?>
<project name="salon" default="all">
  
  
  <property file="salon.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/compilefontconfig.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/rhino.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/javazic.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/java-atk-wrapper.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/icedtea-sound.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.sqlite-jdbc-3.8.7.classpath">
    <pathelement location="${basedir}/lib/sqlite-jdbc-3.8.7.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module Salon -->
  
  <dirname property="module.salon.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.salon" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.salon" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.salon" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.salon" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="salon.output.dir" value="${module.salon.basedir}/out/"/>
  <property name="salon.testoutput.dir" value="${module.salon.basedir}/out/test/Salon"/>
  
  <path id="salon.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="salon.module.production.classpath">
    <path refid="${module.jdk.classpath.salon}"/>
    <path refid="library.sqlite-jdbc-3.8.7.classpath"/>
  </path>
  
  <path id="salon.runtime.production.module.classpath">
    <pathelement location="${salon.output.dir}"/>
    <path refid="library.sqlite-jdbc-3.8.7.classpath"/>
  </path>
  
  <path id="salon.module.classpath">
    <path refid="${module.jdk.classpath.salon}"/>
    <pathelement location="${salon.output.dir}"/>
    <path refid="library.sqlite-jdbc-3.8.7.classpath"/>
  </path>
  
  <path id="salon.runtime.module.classpath">
    <pathelement location="${salon.testoutput.dir}"/>
    <pathelement location="${salon.output.dir}"/>
    <path refid="library.sqlite-jdbc-3.8.7.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.salon">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.salon">
    <patternset refid="excluded.from.module.salon"/>
  </patternset>
  
  <path id="salon.module.sourcepath">
    <dirset dir="${module.salon.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.salon" depends="compile.module.salon.production,compile.module.salon.tests" description="Compile module Salon"/>
  
  <target name="compile.module.salon.production" description="Compile module Salon; production classes">
    <mkdir dir="${salon.output.dir}"/>
    <javac destdir="${salon.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.salon}/javac">
      <compilerarg line="${compiler.args.salon}"/>
      <bootclasspath refid="salon.module.bootclasspath"/>
      <classpath refid="salon.module.production.classpath"/>
      <src refid="salon.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.salon"/>
    </javac>
    
    <copy todir="${salon.output.dir}">
      <fileset dir="${module.salon.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.salon.tests" depends="compile.module.salon.production" description="compile module Salon; test classes" unless="skip.tests"/>
  
  <target name="clean.module.salon" description="cleanup module">
    <delete dir="${salon.output.dir}"/>
    <delete dir="${salon.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.salon" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.salon" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>
